{$R *.dfm}

procedure TFormVendaExterna.BtnSalvarClick(Sender: TObject);
var
data : TDateTime;
nome : string;
i : integer;
begin
  nome := '';
  data := Date;
  inherited;
  if (EditNomeVendedorExterno.Text <> '') AND (StrToInt(EditNomeVendedorExterno.Text) <=100) then
  begin
    for i := 0 to 2 do
    begin
      nome := nome +
    end;

    EditDAV.Text := database[0, 0] + FormatDateTime('yyyymmdd', data);
  end;
end;

end.
