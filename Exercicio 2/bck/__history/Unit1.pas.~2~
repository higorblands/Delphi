{$R *.dfm}

function TForm1.myStrToAscii(text: string): string;
var
  tamanho,i : integer;
  palavraHex : string;
begin
  tamanho := Length(text);
for i := 1 to tamanho do
  palavraHex:= palavraHex + IntToStr(Ord(Texto[i]))+ ´;
end;

end.
