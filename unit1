type
  TForm1 = class(TForm)
    edtValor1: TEdit;
    edtValor2: TEdit;
    edtValorExibir: TEdit;
    RadioGroup1: TRadioGroup;
    btCalcular: TButton;
    rdSoma: TRadioButton;
    rdMultiplicar: TRadioButton;
    rdSubtrair: TRadioButton;
    rdDividir: TRadioButton;
