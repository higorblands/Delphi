{$R *.dfm}

procedure TForm1.btCalcularClick(Sender: TObject);
begin
edtValorExibir.Text := (FloatToStr(ExibirValor(StrToFloat(edtValor1.Text),(StrTofloat(edtValor2.Text)))));
end;

function TForm1.ExibirValor(valor1, valor2: double): double;
begin
 Result := (valor2) + (valor2);
end;

end.
